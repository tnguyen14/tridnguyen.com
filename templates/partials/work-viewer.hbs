<div class="work-viewer" id="{{slug}}">
	<div class="feature-images">
		{{#each feature}}
			<div>
				<a rel="{{../title}}" class="fancybox" title="{{this.caption}}" href="{{../url}}/{{this.full}}"><img src="{{../url}}/{{this.view}}" /></a>
			</div>
		{{/each}}
	</div><!-- .feature-images -->
	<div class="description">
		<h3 class="work-title">{{title}}</h3>
		{{{main}}}
	</div>
	<i class="closeicon icon-remove-sign"></i>
</div><!-- .work-viewer -->