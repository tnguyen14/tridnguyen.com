{{#each posts}}
	<article class="post-single">
		<h2 class="article-title"><a href="/articles/{{slug}}">{{{title}}}</a></h2>
		<div class="article-date">{{getDate 'MM-DD-YYYY' date}}</div>
{{{main}}}
	</article><!-- .post-single -->
{{else}}
	<p>No articles available.</p>
{{/each}}

<div class="nav-link">
	{{#if prevUrl}}
		<a class="prev" href="{{prevUrl}}"><i class="fa fa-arrow-left"></i> Previous</a>
	{{/if}}
	{{#if nextUrl}}
		<a class="next" href="{{nextUrl}}">Next <i class="fa fa-arrow-right"></i></a>
	{{/if}}
</div>


