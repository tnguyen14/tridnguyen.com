{{! custom header}}
{{> head}}
	<div class="main-header">
		{{> nav}}
	</div><!-- .main-header -->
	<h1>About</h1>
	<div class="about-page">
		<img class="feature" src="{{content.feature}}"/>
		{{{content.main}}}

		<a class="resume" href="/resume">Resume</a>
	</div><!-- .about -->

	<div class="works">
		<h2>Works</h2>
		<div class="work-viewers">
			{{#each works}}
				{{#step 1}}
				<div class="work-viewer">
					<div class="feature-images">
						{{#each feature}}
							<div><a rel="{{../title}}" class="fancybox" title="{{this.caption}}" href="{{../url}}/{{this.source}}"><img src="{{../url}}/{{this.source}}" /></a></div>
						{{/each}}
					</div><!-- .feature-images -->
					<div class="description">
						{{{main}}}
					</div>
				</div><!-- .work-viewer -->
				{{/step}}
			{{/each}}
		</div><!-- .work-viewers -->
		<div class="work-singles">
			{{#each works}}
				{{#step 1}}
					<div class="work-single">
						{{! preview is the first image}}
						<img class="preview" src="{{url}}/{{feature.[0].source}}"/>
						<h3 class="work-title">{{title}}</h3>
					</div><!-- .work-single -->
				{{/step}}
			{{/each}}{{! works}}
		</div><!-- .work-singles -->
	</div><!-- .works -->
{{> footer}}